<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="-4dp"
    android:layout_marginLeft="3dp"
    android:layout_marginStart="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginEnd="3dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout

        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground">
        <ImageView
            android:id="@+id/imgInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            app:srcCompat="@mipmap/more_horizontal_36" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/profileImageIv"
                android:layout_width="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content"

                android:src="@mipmap/icon_razao_social_48" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="14sp"
                        android:id="@+id/textViewIdCliente"/>


                    <TextView
                        android:id="@+id/textViewNomeFantasia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:text="Nome Fanstasia"
                        android:layout_marginStart="4dp"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="14sp" />
                </LinearLayout>


                <TextView
                    android:id="@+id/textViewEndereco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bairro"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="14sp" />

            </LinearLayout>





        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReceber"
                android:layout_width="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_height="wrap_content"
                app:backgroundTint="@color/brand_red"
                android:textSize="14sp"
                android:text="COBRAR"

                android:textColor="@color/white"
                app:icon="@mipmap/icon_receber"
                />



            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundTint="@color/md_green_500"
                android:textSize="14sp"
                android:layout_marginStart="30dp"
                android:text="VENDER"

                android:textColor="@color/white"
                app:icon="@mipmap/icon_vender"
                />

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>