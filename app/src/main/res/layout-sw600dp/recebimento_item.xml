<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="-4dp"
    android:layout_marginLeft="2dp"
    android:layout_marginStart="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginEnd="3dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <CheckBox
            android:id="@+id/chbRecebimento"
            android:layout_width="48dp"
            android:layout_height="48dp"
            />

        <TextView
            android:id="@+id/txtOrderSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:padding="5dp"
            android:text="ordem"
            android:textColor="@android:color/primary_text_light"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/txtRecebimentoIDVenda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID"

            android:padding="5dp"
            android:textColor="@android:color/primary_text_light"
            android:textSize="14sp"

            />

        <TextView
            android:id="@+id/txtSalesDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DATA VENDA"

            android:padding="5dp"

            android:textColor="@android:color/primary_text_light"
            android:textSize="14sp"

            />
        <TextView
            android:id="@+id/txtDateVencimento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DATA VENCIMENTO"

            android:padding="5dp"
            android:textColor="@android:color/primary_text_light"
            android:textSize="14sp"

            />

        <TextView
            android:id="@+id/txtQDT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:padding="5dp"
            android:text="QTD"

            android:textColor="@android:color/primary_text_light"
            android:textSize="14sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtSalesValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"

            android:text="TOTAL VENDA"
            android:textColor="@android:color/primary_text_light"
            android:textSize="14sp" />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="@android:color/primary_text_light"
            android:padding="5dp"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/txtAmortizationValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Valor Amortizado"
            android:textColor="@android:color/primary_text_light"
            android:textSize="14sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:textColor="@android:color/primary_text_light"
            android:paddingRight="5dp"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/txtSaldo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saldo"

            android:padding="5dp"
            android:textSize="14sp"
            android:textColor="@android:color/primary_text_light" />

    </LinearLayout>


</LinearLayout>


</androidx.cardview.widget.CardView>